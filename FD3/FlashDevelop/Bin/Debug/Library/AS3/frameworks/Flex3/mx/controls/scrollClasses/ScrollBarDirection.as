package mx.controls.scrollClasses
{
	/**
	 *  The ScrollBarDirection class defines the values for the  *  <code>direction</code> property of the ScrollBar control. * *  @see mx.controls.scrollClasses.ScrollBar *  @see mx.controls.HScrollBar *  @see mx.controls.VScrollBar
	 */
	public class ScrollBarDirection
	{
		/**
		 *  Specifies that a ScrollBar control is for horizontal scrolling.
		 */
		public static const HORIZONTAL : String = "horizontal";
		/**
		 *  Specifies that a ScrollBar control is for vertical scrolling.
		 */
		public static const VERTICAL : String = "vertical";

	}
}
