package flash.desktop
{
	/// Defines constants for the names of the standard data formats used with the Clipboard class.
	public class ClipboardFormats
	{
		/// [AIR] String data.
		public static const TEXT_FORMAT:String = "textFormat";

		/// [AIR] HTML data.
		public static const HTML_FORMAT:String = "htmlFormat";

		/// [AIR] Rich Text Format data.
		public static const RICH_TEXT_FORMAT:String = "richTextFormat";

		/// [AIR] A URL string (AIR only).
		public static const URL_FORMAT:String = "urlFormat";

		/// [AIR] An array of files (AIR only).
		public static const FILE_LIST_FORMAT:String = "fileListFormat";

		/// [AIR] Image data (AIR only).
		public static const BITMAP_FORMAT:String = "bitmapFormat";

	}

}

